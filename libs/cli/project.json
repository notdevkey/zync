{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/cli",
        "entryFile": "libs/cli/src/index.ts",
        "tsConfig": "libs/cli/tsconfig.lib.json",
        "project": "libs/cli/package.json",
        "assets": [{ "glob": "*.md", "input": "libs/cli", "output": "." }],
        "format": ["esm", "cjs"]
      }
    },
    "run-cmd": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "dist/libs/cli",
        "commands": ["node ./index.js"],
        "buildTarget": "cli:build"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs cli {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/cli"],
      "options": {
        "jestConfig": "libs/cli/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
